@import "nib"
@import "core/reset"

.module
  position relative
  width 100%
  height 800px
  background-color #9374e8

.globe-layer
  position relative
  width 100%
  height 100%
  cursor pointer

.globe
  position relative
  display table
  width 600px
  height 100%
  margin 0 auto

.globe-element
  position relative
  display table-cell
  vertical-align middle
  height 600px
  margin 0 auto

.globe-shadow
  position absolute
  width 862px
  height 862px
  background transparent url( "../img/shadow.png" ) no-repeat
  top 50px
  left -50px
  opacity .7

.globe-light
  position absolute
  width 553px
  height 552px
  background transparent url( "../img/light.png" ) no-repeat
  top 123px
  left 23px
  opacity .25

.globe-light2
  position absolute
  width 553px
  height 552px
  background transparent url( "../img/light2.png" ) no-repeat
  left 36px
  top 121px
  opacity .15
