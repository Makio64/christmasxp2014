extends layout/default

block base
  base(href="/experiments/")

block style
  link(rel="stylesheet", href="../css/fonts/fonts.css")
  link(rel="stylesheet", href="../css/main-experiment.css")

block content
  .error.no-webgl
    .error-bg
      .error-bg-text
    .error-content
      .error-content-icon
      .error-content-text.error-content-text--too-soon.
        Ho!Ho!Hol! Looks like you are too greedy!<br />
        Come back later to see that
        delicious experiment.
      a.error-bt(href="/")
        span.error-bt-bg-hover
        span.error-bt-icon
        span.error-bt-text HOME
        span.error-bt-shadow



