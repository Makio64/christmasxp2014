.menu
  position relative
  width 200px
  height 100%
  text-align center
  color #2980f8
  -webkit-font-smoothing antialiased
  border-right 1px solid #102467

.menu-top
  position relative
  padding-top 50px

.menu-logo
  bg( "logo-blue.png" )
  display inline-block

.menu-title
  font normal 14px bold
  color #fff
  letter-spacing 1px
  margin-top 25px

.menu-subtitle
  font normal 12px light
  margin-top 45px

.menu-entries-holder
  position relative
  display table
  width 100%
  margin-top 25px
  height calc( 100% - 379px )

.menu-entries
  display table-cell
  vertical-align middle
  margin-top 160px

.menu-entry
  display block
  font normal 14px bold
  letter-spacing 1px
  &:after
    width 60px
    margin-top 0
  &:not(:last-child)
    margin-bottom 25px

.menu-subentries
  position relative
  width 100%
  height 100px
  padding-top 75px
  // bottom 0
  font normal 12px light
  text-transform uppercase
