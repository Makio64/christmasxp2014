.mobile-menu
  transition all .15s linear
  display none
  width 100%
  height 100%
  background #f2f4f9
  position fixed
  top 0
  left 0
  z-index 11
  opacity 0
  @media screen and (max-width: 640px) {
    // display table
  }
  
  .inner 
    transition all .3s linear
    display table-cell
    vertical-align middle
    text-align center
    // opacity 0
    
    .menu-subentry--credits
      padding 30px
    
    .bt-close-holder
      .bt-close 
        transition all .3s linear
        opacity 0
        
        
        .icon 
          opacity 0
          transition all .3s linear .15s
          transform rotate(90deg)
          
        

      &:hover 
        .bg-normal
          opacity 1
        .bg-hover 
          opacity 0
  
    
    .menu-entries
      display inline-block
      margin 50px 0
      
      .menu-entry
        transform translateY(7px) translateZ(0)
        opacity 0
        
        &:nth-child(1)
          transition all .4s ease-out .4s
        
        &:nth-child(2)
          transition all .4s ease-out .55s
      
        &:nth-child(3)
          transition all .3s ease-out .70s
          
      span 
        font-size 28px
        color #13076d !important
        
        
        &:after
          width 100%
        
      
    
    .menu-subentries
      position static
      
      .menu-subentry:nth-child(1 ):after
          background-color #13076c
      
      a 
        font-size 16px
        color #13076c
        text-decoration none
      

      .share--fb .icon
        bg( "icon-share-fb-blue-dark.png" )
      
      .share--twitter .icon
        bg( "icon-share-twitter-blue-dark.png" )
    

    .hoverable:hover .normal
      opacity 1
      transform scale(.85)
  

.mobile-menu.transitionIn
  opacity 1
  
  .inner
    
    .bt-close-holder
      .bt-close 
        opacity 1
        
        .icon 
          opacity 1
          transform rotate(0deg)
    
    .menu-entries
      
      .menu-entry
        transform translateY(0px) translateZ(0)
        opacity 1


.mobile-menu.transitionOut
  transition all .15s linear .7s
  opacity 0
  
  
  
  .inner
    
    .bt-close-holder
      .bt-close 
        opacity 0
        
        .icon 
          opacity 0
          transform rotate(90deg)
    
    .menu-entries
      
      .menu-entry
        tran
        transform translateY(-10px) translateZ(0)
        opacity 0
        
        &:nth-child(1)
          transition all .3s ease-out .3s
        
        &:nth-child(2)
          transition all .3s ease-out .45s
        
        &:nth-child(3)
          transition all .3s ease-out .6s
      
        
        

            
  

