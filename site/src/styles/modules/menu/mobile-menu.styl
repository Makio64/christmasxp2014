.mobile-menu
  display none
  width 100%
  height 100%
  background #f2f4f9
  position absolute
  top 0
  left 0
  z-index 2
  @media screen and (max-width: 640px) {
    // display table
    
  }
  
  .inner 
    display table-cell
    vertical-align middle
    text-align center
    
    .menu-entries
      display inline-block
      margin 90px 0
      
      span 
        font-size 28px
        color #13076d !important
        
        &:after
          width 100%
    
    .menu-subentries
      position static
      
      .menu-subentry:nth-child(1 ):after
          background-color #13076c
      
      a 
        font-size 16px
        color #13076c
        text-decoration none
      

      .share--fb .icon
        bg( "icon-share-fb-blue-dark.png" )
      
      .share--twitter .icon
        bg( "icon-share-twitter-blue-dark.png" )
    

    .hoverable:hover .normal
      opacity 1
      transform scale(.85)
        
        

            
  

