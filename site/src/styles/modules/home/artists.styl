.artists
  position absolute
  width 100%
  height 100%
  top 0
  right 0
  background-color rgba( 255, 255, 255, .97 )
  width calc( 100% - 200px )
  display none

.artists-infos
  position relative
  width 33%
  height 100%
  float left

.artists-infos-content-holder
  position relative
  width 80%
  padding 0 10%
  height calc( 100% - 250px )
  display table

.artists-infos-content
  display table-cell
  vertical-align middle
  text-align center

.artists-infos-title
  font normal 32px bold
  color blueDark
  letter-spacing 1px
  &:after 
    width 130px
    margin-top 3px

.artists-infos-desc
  margin-top 50px
  font normal 14px regular
  color blueDark

.artists-entries-holder
  width 67% 
  float left
  overflow hidden

.artists-entries-holder
.artists-entries, 
  position relative
  height 100%

.artists-en tries
  position relative
  width 100%

.artists-entry
  position relative
  width ( 100 / 3 )%
  min-width 190px
  height 50%
  float left
  text-align center
  display table

.artists-entry-holder
  display table-cell
  vertical-align middle
  padding-top 15px
  padding-bottom 15px

.artists-entry-avatar
  position relative

.artists-entry-content
  display block

.artists-entry-author
  position relative
  display inline-block
  margin-top 34px
  font normal 14px bold
  color red
  text-decoration none
  border-bottom 1px solid red
  
.artists-entry-desc
  font normal 12px regular
  color blueDark
  margin-top 20px
  height 40px

.artists-entry-day
  position relative
  display inline-block
  margin-top 15px
  background-color red
  width 30px
  height 30px
  border-radius 20px
  font normal 12px/30px bold
  color #fff
