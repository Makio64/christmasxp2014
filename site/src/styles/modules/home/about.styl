.about
  position absolute
  width calc( 100% - 200px )
  height 100%
  top 0
  right 0
  display none
  perspective-origin 50% 50%
  perspective 1000
  .bt-close .icon
    left 0
  @media screen and (max-width: 640px) {
    width 100%
    height calc(100% - 60px)
    top 60px
    background #fafafa
  }

.about-content
  position absolute
  background-color #fff
  width 100%
  height 100%
  transform-origin 0 0
  backface-visibility hidden
  
  @media screen and (max-width: 640px) {
    &.no-mobile {
      display none  
    }
    &.mobile {
      display table
    }
  }

.about-content.mobile {
  display none
}

.about-infos
  position relative
  width 33%
  height 100%
  float left

.about-infos-content-holder
  position relative
  width 80%
  padding 0 10%
  height calc( 100% - 250px )
  display table

.about-infos-content
  display table-cell
  vertical-align middle
  text-align center

.about-infos-title
  font normal 32px bold
  color blueDark
  letter-spacing 1px
  &:after 
    width 130px
    margin-top 3px

.about-infos-desc
  margin-top 50px
  font normal 14px regular
  color blueDark

.about-infos-old
  font normal 12px regular
  color red
  a
    color red
  &:before, &:after
    content ""
    display block
    margin 0 auto
    background-color red
    width 4px
    height 4px
    border-radius 2px
  &:before
    margin-top 50px
    margin-bottom 20px
  &:after
    margin-top 20px
    margin-bottom 50px
    
.about-infos-thanks
  font normal 14px regular
  color blueDark

.about-entries-holder
  width 67% 
  float left
  overflow hidden

.about-entries-holder
.about-entries, 
  position relative
  height 100%

.about-entry-holder
  display table-cell
  vertical-align middle
  padding-top 15px
  padding-bottom 15px

.about-entry
  position relative
  width 100%
  min-width 190px
  height 50%
  float left
  text-align center
  display table

.about-entry-illu-holder
  position relative
  display table
  width 50%
  height 100%
  float left

.about-entry-illu
  position relative
  display table-cell
  vertical-align middle
  margin 0 auto

.about-entry-desc-holder
  position relative
  display table
  width 33%
  height 100%
  padding-right 17%
  float left
  text-align left

.about-entry-desc
  position relative
  display table-cell
  vertical-align middle
  font normal 12px regular
  color blueDark

.about-content.mobile 
  position absolute
  top 50%
  width 100%
  transform translateY(-50%)
  vertical-align middle
  background none
  text-align center
  height auto
  
  
  .about-infos-title
    font normal 26px bold
    &:after 
      width 88px
  
  p 
    padding 0 30px
    border-sizing border-box
  
    &.desc 
      font normal 1em normal
      color blueDark
      margin 50px 0 0 0
    
    &.previous
      font normal .8em normal
      color #ff265d
      
      &:before,
      &:after
        content ""
        width 6px
        height 6px 
        background #ff265d
        margin 40px auto 20px
        display block
        border-radius 5px
      
      &:after 
        margin 20px auto 40px
  
  span 
    display block 
    width 100%
    font normal 1em normal
    color blueDark




