.menu
  position absolute
  width 200px
  height 100%
  overflow-y hidden
  text-align center
  color #2980f8
  border-right 1px solid blueDark
  a
    text-decoration none
    color blueLight

.menu-top
  position relative
  padding-top 50px

.menu-logo
  bg( "logo-blue.png" )
  display inline-block

.menu-title
  font normal 14px bold
  -webkit-font-smoothing antialiased
  color #fff
  letter-spacing 1px
  margin-top 25px

.menu-subtitle
  font normal 12px light
  margin-top 45px

.menu-entries-holder
  position relative
  display table
  width 100%
  margin-top 25px
  height calc( 100% - 379px )

.menu-entries
  display table-cell
  vertical-align middle
  margin-top 160px

.menu-entry
  display block
  font normal 14px bold
  -webkit-font-smoothing antialiased
  letter-spacing 1px
  &:after
    width 60px
    margin-top 0
  &:not(:last-child)
    margin-bottom 25px

.menu-subentries
  position relative
  width 100%
  height 100px
  top 55px
  font normal 12px light
  text-transform uppercase
  a
    letter-spacing 1px
    -webkit-font-smoothing auto

.menu-subentry
  position relative
  display inline-block

.menu-subentry:not(:first-child)
  top 8px

.menu-subentry:nth-child( 1 )
  &:after
    content ""
    position relative
    top -2px
    margin-left 17px
    margin-right 8px
    display inline-block
    width 4px
    height 4px
    background-color blueLight
    border-radius 2px
