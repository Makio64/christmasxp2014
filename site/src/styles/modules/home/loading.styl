.loading
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  overflow hidden
  color #fff
  
.loading-bg
  position absolute
  width 100%
  height 100%
  background transparent url( "img/loading-bg.jpg" )
  background-size cover

.loading-content-holder
  position relative
  width 100%
  height 100%
  display table
  text-align center

.loading-percent
  position absolute
  top 180px
  width 100%
  font normal 340px bold
  color #152f80
  opacity .175
  text-shadow -1px -1px 0 #000, 1px -1px 0 #000, -1px 1px 0 #000, 1px 1px 0 #000

.loading-content
  position relative
  display table-cell
  vertical-align middle

.loading-icon
  display inline-block
  margin-bottom 35px
  bg( "icon-sugar.png" )

.loading-title
  font normal 14px bold
  letter-spacing 1px

.loading-subtitle
  font normal 15px light
  margin-bottom 50px
  letter-spacing 1px

.loading-separator
  margin-bottom 65px
  &:after
    width 90px

.loading-baseline
  bg( "loading-title.png" )
  opacity .95
  margin-bottom 5px
  display inline-block

.loading-details
  font normal 15px lightItalic
  letter-spacing 2px
  margin-bottom 100px

.loading-logo
  display inline-block
  bg( "logo-red.png" )
