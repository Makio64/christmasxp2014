.experiments-content
  position absolute
  left 45px
  width calc( 100% - 45px )
  height 100%
  &.error-too-soon
    .error
      display table
    .error-content-text--no-webgl
      display none
    .error-content-text--too-soon
      display block    
    iframe
      display none
  @media screen and (max-width: 640px) {
    width 100%
    left 0  
  }

.experiment-nav-entries
  position absolute
  left 25px
  top 20px

.experiment-nav-entry
  display inline-block
  font normal 12px regular
  letter-spacing 1px
  a
    text-decoration none
  &:not(:last-child):after
    position relative
    top -2px
    display inline-block
    margin-left 10px
    margin-right 8px
    content ""
    width 4px
    height 4px
    border-radius 2px
    background-color blueDark

.experiment-shares-entries
  position absolute
  right 25px
  top 20px

.experiment-shares-entry
  display inline-block
  a, span
    display inline-block
  &:not(:last-child):after
    position relative
    top -12px
    display inline-block
    margin-left 6px
    margin-right 2px
    content ""
    width 4px
    height 4px
    border-radius 2px
    background-color #fff
    opacity .5

.experiment--dark
  .experiment-nav-entry 
    a
      color blueDark
      opacity .7
    &:not(:last-child):after
      background-color blueDark
      opacity .4
  .experiment-shares-entry
    &:not(:last-child):after
      background-color blueDark
      opacity .4
  .share--twitter .icon
      bg( "icon-share-twitter-dark.png" )
  .share--fb .icon
      bg( "icon-share-fb-dark.png" )

.experiment--light
  .experiment-nav-entry 
    a
      color #fff
      opacity .5
    &:not(:last-child):after
      background-color #fff
      opacity .5
  .share--twitter .icon
      bg( "icon-share-twitter-light.png" )
  .share--fb .icon
      bg( "icon-share-fb-light.png" )
