.error
  position absolute
  // display table
  display none
  width 100%
  height 100%
  background-color #e9505e

.error-bg
  position absolute
  width 100%
  height 100%
  display table
  margin 0 auto

.error-bg-text
  position relative
  display table-cell
  vertical-align middle
  bg( "ooops.png" )
  background-position center center

.error-content
  position relative
  display table-cell
  vertical-align middle
  text-align center

.error-content-icon
  bg( "icon-sugar.png" )
  display inline-block

.error-content-text
  position relative
  margin-top 25px
  font normal 24px/24px bold
  color #fff
  -webkit-font-smoothing antialiased
  letter-spacing 2px

.error-bt
  position relative
  display inline-block
  color white
  margin-top 120px
  padding 12px 20px
  border-radius 25px
  background-color #f25366
  overflow hidden
  span
    display inline-block
    vertical-align top

.error-bt-bg-hover,
.error-bt-shadow
  position absolute
  top 0
  left 0
  width 100%
  height 100%

.error-bt-bg-hover
  background-color #b9414f

.error-bt-icon
  position relative
  bg( "icon-tree.png" )
  margin-right 10px

.error-bt-text
  position relative
  font normal 12px regular
  letter-spacing 1px
  top 2px

.error-bt-shadow
  box-shadow inset 0 2px 5px -2px #fff
  border-radius 25px
  
