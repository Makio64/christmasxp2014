.infos-layer
  position absolute
  background-color #051d6b
  width 100%
  height 100%
  opacity 0
  visibility hidden
  transform-origin 0 0
  z-index 1

.infos
  position absolute
  left -360px
  width 360px
  height 100%
  background-color #fff
  text-align center
  z-index 2

.infos-bg
  position absolute
  top 0
  left 0
  bg( "infos-bg.jpg" )

.infos-close
  position relative
  z-index 1
  width 100%
  height 100px
  display block
  .bt-close
    top 49px

.infos-content
  position relative
  margin 60px auto 0
  width 270px

.infos-idx
  font normal 22px bold
  color blueDark
  &:after
    width 40px

.infos-title
  font normal 32px bold
  color blueDark
  margin-top 20px

.infos-author
  font normal 15px bold
  color red
  text-transform uppercase
  text-decoration none
  border-bottom 1px solid red
  -webkit-font-smoothing antialiased

.infos-subtitle
  font normal 14px bold
  color red
  text-align left
  margin-top 60px

.infos-desc
  font normal 12px regular
  color blueDark
  text-align left
  margin-top 20px

.infos-parts
  text-align left
  li
    margin-top 50px
  h3
    font normal 14px bold
    color red
  span
    font normal 12px regular
    color blueDark
    margin-top 20px
    display block
    
    
