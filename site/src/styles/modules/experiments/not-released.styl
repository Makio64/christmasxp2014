.not-released
  position relative
  width 100%
  height 100%
  text-align center
  background-color #797979
  display none
  &.visible
    display table

.not-released-holder
  display table-cell
  vertical-align middle

.not-released-icon
  position absolute
  left 50%
  transform translateX( -50% ) translateY( -30% )
  bg( "icon-not-released.png" )

.not-released-title
  position relative
  font normal 32px bold
  letter-spacing 1px
  color #fff

.not-released-author
  position relative
  font normal 15px lightItalic
  letter-spacing 1px
  color #fff
