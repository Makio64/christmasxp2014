.preview
  position absolute
  width 100%
  height 100%
  background-color rgba( 5, 29, 107, .9 )
  opacity 0
  display table
  text-align center
  visibility hidden
  z-index 10

.preview-holder
  position relative
  display table-cell
  vertical-align middle
  width 100%
  height 100%

.preview-image-holder
  position absolute
  left 50%
  transform translateX( -50% ) translateY( -50% )

.preview-title
  position relative
  font normal 32px bold
  letter-spacing 1px
  color #fff

.preview-author
  position relative
  font normal 15px lightItalic
  letter-spacing 1px
  color #fff
  
  
