.menu
  position relative
  width 45px
  height 100%
  background-color #fff
  float left

.menu--over
  width 80px

.menu-item
  position relative
  width 100%
  height 4%
  text-align center
  a
    position relative
    display block
    width 100%
    height 100%
    text-decoration none
  img
    position absolute
    top 0
    left 0
    opacity 0
  &:not(:last-child):after
    content ""
    display block
    position relative
    width 100%
    height 1px
    background-color #f5f7fc

.menu-item-text-holder
  position relative
  display table
  width 100%
  height 100%

.menu-item-text
  position relative
  top 0
  left 0
  display table-cell
  vertical-align middle
  font normal 10px bold
  color #d6daee
  
