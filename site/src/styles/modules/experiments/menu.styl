.menu
  position relative
  width 45px
  height 100%
  background-color #fff
  float left

.menu--over
  width 80px

.menu-item-activated
  position relative
  width 100%
  height 1%
  background-color red

.menu-item
  position relative
  width 100%
  height calc( 99% / 25 )
  text-align center
  a
    position relative
    display block
    width 100%
    height 100%
    text-decoration none
    background-color transparent
    color #d6daee
    transition all .1s cubic-bezier(0.645, 0.045, 0.355, 1.000)
    &.activated
      color blueDark
    &:hover
      background-color #f75568
      color #fff
  img
    position absolute
    top 0
    left 0
    opacity 0
  &:not(:last-child):after
    content ""
    display block
    position relative
    width 100%
    height 1px
    background-color #f5f7fc

.menu-item-text-holder
  position relative
  display table
  width 100%
  height 100%

.menu-item-text
  position relative
  top 1px
  left 0
  display table-cell
  vertical-align middle
  font normal 10px bold
  
