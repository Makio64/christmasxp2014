.borders
  position absolute
  width 100%
  height 100%

.border
  position absolute
  background-color #e8eaef

.border-left
  @extends .border
  left 0
  top 0
  width 1px
  height 100%

.border-right
  @extends .border
  right 0
  top 0
  width 1px
  height 100%

.border-top
  @extends .border
  top 0
  width 100%
  height 1px

.border-bottom
  @extends .border
  bottom 0
  width 100%
  height 1px

.underline
  &:after
    content ""
    position relative
    display block
    width auto
    height 7px
    margin 5px auto 0
    background transparent url( "img/underline.png" ) repeat-x
    background-size 13px 7px
  &.underline--blue
    &:after
      background-image url( "img/underline-blue.png" )
  &.underline--blue-dark
    &:after
      background-image url( "img/underline-blue-dark.png" )

.bt-tce
  position relative
  display inline-block
  background red
  text-decoration none
  color white
  span
    display inline-block
    color white 

.pattern
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  opacity .075
  background transparent url( "img/texture.png" )
  pointer-events none

.pattern-white
  background transparent url( "img/texture-white.png" )

.bt-close-holder
  position relative
  z-index 1
  width 100%
  height 100px
  display block
  text-align center

.bt-close
  position relative
  top 49px
  display block
  width 41px
  height 41px
  margin 0 auto
  span
    display block
  .bg
    position absolute
  .bg-normal
    position absolute
    bg( "bt-close-bg.png" )
  .bg-hover
    position absolute
    display none
  .icon
    position relative
    display inline-block
    top 13px
    bg( "icon-close-blue.png" )

.share
  position relative
  display block
  padding 8px
  .icon
    display block

.share--twitter .icon
    bg( "icon-share-twitter.png" )

.share--fb .icon
    bg( "icon-share-fb.png" )

.no_ice
  position relative
  width 100%
  height 100%

.ice
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  display none
