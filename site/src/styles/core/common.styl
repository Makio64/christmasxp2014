.underline
  &:after
    content ""
    position relative
    display block
    width auto
    height 7px
    margin 5px auto 0
    background transparent url( "img/underline.png" ) repeat-x
    background-size 13px 7px
  &.underline--blue
    &:after
      background-image url( "img/underline-blue.png" )

.bt-tce
  position relative
  display inline-block
  background red
  text-decoration none
  color white
  span
    display inline-block
    color white 

.pattern
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background transparent url( "img/texture.png" )
  pointer-events none
