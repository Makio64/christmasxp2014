.infos
  position relative
  width 535px
  height 100%
  float left
  .subtitle
    color white
    font normal 14px bold
    -webkit-font-smoothing antialiased
    margin-bottom 12px
  .desc
    color blueLight
    font normal 12px light
    margin-bottom 40px
  h3
    color white
    font normal 14px bold
    -webkit-font-smoothing antialiased
    margin-bottom 12px
  span
    display block
    color blueLight
    font normal 12px light
    margin-bottom 40px    


.infos-details
  position relative
  width 380px
  height 100%
  background-color blueMedium
  float left
  .title
    color white
    font normal 22px bold
    -webkit-font-smoothing antialiased
    text-align center
    margin-top 50px
    margin-bottom 65px
    &.underline:after
      width 64px

.infos-details-cnt
  position relative
  padding 0 50px

.infos-menu
  position relative
  width 155px
  height 100%
  background-color #f2f4f9
  float left
  text-align center
  .bt-close
    position relative
    display block
    height 95px
    background-color #f00
  .idx
    color blueDark
    font normal 32px bold
    // margin-top 150px
    margin-bottom 60px
    &:after
      width 52px
  .title
    color blueDark
    font normal 14px bold
    -webkit-font-smoothing antialiased
  .author
    color blueLight
    font normal 14px regular
    -webkit-font-smoothing antialiased

.infos-menu-holder
  position relative
  display table
  width 100%
  height 66%

.infos-menu-content
  position relative
  display table-cell
  vertical-align middle

.infos-shares
  position absolute
  bottom 0
  width 100%
  height 160px
  background-color #00f
