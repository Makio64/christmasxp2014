.infos
  position relative
  width 535px
  height 100%
  float left


.infos-details
  position relative
  width 380px
  height 100%
  background-color blueMedium
  float left
  .title
    color white
    font normal 22px bold
    -webkit-font-smoothing antialiased
    text-align center
    margin-top 43px
    margin-bottom 65px
    &.underline:after
      width 64px
  .subtitle
    color white
    font normal 14px bold
    -webkit-font-smoothing antialiased
    margin-bottom 12px
  .desc
    color blueLight
    font normal 12px light
    margin-bottom 40px
  h3
    color white
    font normal 14px bold
    -webkit-font-smoothing antialiased
    margin-bottom 12px
  span
    display block
    font normal 12px light
    color blueLight
    margin-bottom 40px

.infos-details-cnt
  position relative
  padding 0 50px

.infos-menu
  position relative
  width 155px
  height 100%
  background-color #f2f4f9
  float left
  text-align center
  .idx
    color blueDark
    font normal 32px bold
    margin-bottom 60px
    &:after
      width 52px
  .title
    color blueDark
    font normal 14px bold
    -webkit-font-smoothing antialiased
  .author
    color blueLight
    font normal 14px regular
    -webkit-font-smoothing antialiased
  .bt-tce
    margin-top 30px
    padding 8px 14px
    border-radius 20px
  .bt-details-cnt
    display none
  .bt-details-cnt--closed
    display block
    .icon
      bg( "icon-infos.png" )

.infos-menu-top
  position relative
  display block
  height 95px

.infos-menu-bt-close
  position relative
  top 49px
  display block
  width 41px
  height 41px
  margin 0 auto
  span
    display block
  .bg
    position absolute
  .bg-normal
    position absolute
    bg( "bt-close-bg.png" )
  .bg-hover
    position absolute
    display none
  .icon
    position relative
    display inline-block
    top 12px
    bg( "icon-close-blue.png" )

.infos-menu-middle
  position relative
  display table
  width 100%
  height 66%

.infos-menu-holder
  position relative
  display table-cell
  vertical-align middle

.infos-shares
  position absolute
  bottom 0
  width 100%
  height 160px

.infos-shares-entry
  position relative
  width 100%
  height 50%
  font normal 14px/80px regular
  border-top solid 1px #e8eaef
